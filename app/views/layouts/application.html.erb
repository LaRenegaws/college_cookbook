<!DOCTYPE html>
<html>
<head>
  <title>CollegeCookbook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
	  <div class="container">

	      <ul class="nav navbar-nav navbar-left">
		    <li>
		      	<div class="navbar-brand"><%= link_to "College Cookbook", root_path %>
		      	</div>
		    </li>
		    <li>
			<%= form_tag(root_path, :method => "get", class: "navbar-form", id: "search-form") do %>
				      <%= text_field_tag :search, params[:search], placeholder: "Search Recipes" %> 
				      <button type="submit" class="btn btn-default">Submit</button>
				      <% end %>
				</li>
				</ul>

	      <ul class="nav navbar-nav navbar-right">
	      	<li>
	      		<%= link_to "About", '/about' %>
	      	</li>
	      	<% if current_user %>
		      	<li>
		      		<%= link_to "New Recipe", new_recipe_path %>
		      	</li>
		      	<li>
		      		<p class="navbar-text">Welcome <%= current_user.first_name %></p>
		      	</li>
		      	<li>
		      		<%= link_to "Log Out", logout_path, method: "delete"%>
		      	</li>
		    <% else %>
		    	<li> 
		    		<%= link_to "Sign Up", '/signup' %>
		    	</li>
		    	<li>
		    		<%= link_to "Login", '/login' %>
		    	</li>
		    <% end %>	
	      </ul>

	  </div>
	</nav>

	<div class="container">
	<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, class: 'alert' %>
	<% end %>
	</div>
	
	<div class="container">
		<%= yield %>
	</div>
	
</body>
</html>
