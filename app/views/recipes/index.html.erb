<div class="container">
	<%@recipe.each_slice(3) do |recipes|%>
	<div class="row">
		<% recipes.each do |recipe| %>
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="img"><%= image_tag recipe.image.url(:thumb) %>
				</div>
				<h2><%= link_to recipe.title, recipe %>
				</h2>
			</div>
		<% end %>
	</div>
	<% end %>
</div>