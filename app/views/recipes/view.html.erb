<div class="container">
	<div class="profile">
		<h1>Your Recipes</h1>
	</div>
	<%@recipe.each_slice(3) do |recipes|%>
	<div class="row">
		<% recipes.each do |recipe| %>
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="img"><%= image_tag recipe.image.url(:thumb) %>
				</div>
				<h2><%= link_to recipe.title, recipe %>
				</h2>
				<h4> Ingredients</h4>
				<ul class="list_group">
					<% recipe.ingrediants.each do |ingr| %>
					<li><%= ingr.name %></li>
					<% end %>
				</ul>
				<h4> Directions</h4>
					<ul class="list_group">
						<% recipe.directions.each do |direc| %>
						<li><%= direc.order %></li>
						<% end %>
					</ul>
			</div>
		<% end %>
	</div>
<% end %>
</div>